            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline4" android:layout_marginTop="8dp"
